[include]
  path = ~/.gitconfig.local
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[commit]
  gpgsign = true
[gpg]
  format = ssh
[rerere]
  enabled = true
[column]
  ui = auto
[init]
  defaultBranch = main
[push]
  followTags = true
[core]
  editor = nvim
